# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"

# For demo purposes, you can use a dummy URL like:
# DATABASE_URL="postgresql://demo:demo@localhost:5432/demo"

# Or use Neon, Supabase, PlanetScale, or any other PostgreSQL provider

# Twitter API Configuration
TWITTER_CONSUMER_KEY="your_twitter_consumer_key"
TWITTER_CONSUMER_SECRET="your_twitter_consumer_secret"
TWITTER_BEARER_TOKEN="your_twitter_bearer_token"

# QStash Configuration (for scheduling tweets)
QSTASH_TOKEN="your_qstash_token"
QSTASH_CURRENT_SIGNING_KEY="your_qstash_current_signing_key"
QSTASH_NEXT_SIGNING_KEY="your_qstash_next_signing_key"

# Redis connection for OAuth state management
UPSTASH_REDIS_REST_URL="your_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# Cloudflare R2 (for media upload)
R2_ACCOUNT_ID="your_r2_account_id"
R2_BUCKET_NAME="your_r2_bucket_name"
R2_ENDPOINT="your_r2_endpoint"
R2_ACCESS_KEY_ID="your_r2_access_key_id"
R2_SECRET_ACCESS_KEY="your_r2_secret_access_key"
R2_TOKEN_VALUE="your_r2_token_value"

# Base URL for OAuth callbacks
NEXTAUTH_URL=http://localhost:3000

# Better Auth Secret
BETTER_AUTH_SECRET="your_better_auth_secret"